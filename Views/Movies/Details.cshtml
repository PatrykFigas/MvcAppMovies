@model MvcAppMovies.Models.Movie

<h1>Szczegóły filmu</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-4">@Model.Tytul</h4>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Czas trwania:</strong> @Model.Dlugosc minut
            </li>
            <li class="list-group-item">
                <strong>Reżyser:</strong> @Model.Rezyser
            </li>
        </ul>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                Edytuj
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                Wróć do listy
            </a>
        </div>
    </div>
</div>
